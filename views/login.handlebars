<div class='row'>
  <div class='col-md-6'>
    <h2>Login</h2>

    <form class='form login-form'>
      <div class='form-group'>
        <label for='email-login' class='col-sm-2 col-form-label'>Email</label>
        <input class='form-input' type='text' id='email-login' />
      </div>
      <div class='form-group'>
        <label
          for='password-login'
          class='col-sm-2 col-form-label'
        >Password</label>
        <input class='form-input' type='password' id='password-login' />
      </div>
      <div class='form-group'>
        <button class='btn btn-primary' type='submit'>Sign in</button>
      </div>
    </form>
  </div>

  <div class='col-md-6'>
    <h2>Signup</h2>

    <form class='form signup-form'>
      <div class='form-group'>
        <label for='name-signup' class='col-sm-2 col-form-label'>Name</label>
        <input class='form-input' type='text' id='name-signup' />
      </div>
      <div class='form-group'>
        <label for='email-signup ' class='col-sm-2 col-form-label'>Email</label>
        <input class='form-input' type='text' id='email-signup' />
      </div>
      <div class='form-group'>
        <label
          for='password-signup'
          class='col-sm-2 col-form-label'
        >Password</label>
        <input class='form-input' type='password' id='password-signup' />
      </div>
      <div class='form-group'>
        <button class='btn btn-primary' type='submit'>Sign Up</button>
      </div>
    </form>
  </div>
</div>

<script src='./js/login.js'></script>