<div class='text-center'>
  <h2>Post Title: {{title}}</h2>

  <p>Post Description: {{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>


   
  <div class="text-center">
    {{#each comments as |comment|}}
    <p class="">Comment: {{comment.title}}</p>
    <p class="">User: {{user.name}} on {{format_date date_created}}</p>
  </div>
  {{/each}}
</div>


<form class="form new-comment-form text-center">
      <div class="form-group">
        <input value='{{id}}' type='hidden' name='post_id' /> 
        <label for="comment-desc">Comment:</label>
        <textarea class="form-input" id="comment-desc" name="comment-desc"></textarea>
      </div>
      <div class="form-group ">
        <button type="submit" class="btn btn-primary text-center">Add a comment</button>
      </div>
    </form>
    

<script src="../js/comment.hs></script>