<div class='text-center card'>
  <div class='card-header'>
    <h3>{{title}}</h3>
    <p>Created by {{user.name}} on {{format_date date_created}}</p>
  </div>
  <div class='card-body'>
    <h4>{{description}}</h4>

  </div>
</div>
<h2 class='text-center mt-5'>Comments</h2>
{{#each comments as |comment|}}

  <div class='text-center card mt-2'>
    <div class='card-header'>
      <h3> {{comment.title}}</h3>
      <p>Created by {{user.name}} on {{format_date date_created}}</p>
    </div>
  </div>
{{/each}}

<form class='form new-comment-form text-center mt-2'>
  <div class='form-group'>
    <input value='{{id}}' type='hidden' name='post_id' />
    <label for='desc'>Add a Comment </label>
    <input class='form-input' type='text' id='desc' name='desc' />

  </div>
  <div class='form-group mt-5'>
    <button type='submit' class='btn btn-primary text-center'>Submit</button>
  </div>
</form>

<script src='../js/comment.js'></script>