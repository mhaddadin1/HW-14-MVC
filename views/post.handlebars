<div class='text-center card'>
  <div class='card-header'>
    <h3>{{title}}</h3>
    <p>Created by {{user.name}} on {{format_date date_created}}</p>
  </div>
  <div class='card-body'>
    <h4>{{description}}</h4>

  </div>
</div>

{{#each comments as |comment|}}
  <div class='text-center card mt-5'>
    <div class='card-header'>
      <h3>Comment: {{comment.title}}</h3>
      <p>Created by {{user.name}} on {{format_date date_created}}</p>
    </div>
  </div>
{{/each}}

<form class='form new-comment-form text-center mt-5'>
  <div class='form-group'>
    <input value='{{id}}' type='hidden' name='post_id' />
    <h3 for='comment-desc'>Add a Comment </h3>
    <textarea
      class='form-input'
      id='comment-desc'
      name='comment-desc'
    ></textarea>
  </div>
  <div class='form-group mt-5'>
    <button type='submit' class='btn btn-primary text-center'>Submit</button>
  </div>
</form>